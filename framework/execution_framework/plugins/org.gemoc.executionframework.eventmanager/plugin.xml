<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Sample Category"
            id="org.gemoc.executionframework.eventmanager">
      </category>
      <view
            name="Event Manager"
            icon="icons/sample.gif"
            category="org.gemoc.executionframework.eventmanager"
            class="org.gemoc.executionframework.eventmanager.views.EventManagerViewPart"
            id="org.gemoc.executionframework.eventmanager.views.EventManager">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="org.gemoc.executionframework.eventmanager.views.EventManager">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
