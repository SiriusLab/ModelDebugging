    </path>

    <path id="fr.obeo.dsl.plugin.gen.classpath">
        <path refid="fr.obeo.dsl.plugin.gen.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="fr.obeo.dsl.plugin.gen.libraryclasspath.alljars">
        <pathelement location="../fr.obeo.dsl.plugin.gen/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="fr.obeo.dsl.plugin.gen.classpath.alljars">
        <path refid="fr.obeo.dsl.plugin.gen.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="latex">
        <java classname="fr.obeo.dsl.plugin.gen.Latex" classpathref="fr.obeo.dsl.plugin.gen.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="latex.alljars">
        <java classname="fr.obeo.dsl.plugin.gen.Latex" classpathref="fr.obeo.dsl.plugin.gen.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
