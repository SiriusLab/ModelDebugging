<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         id="GemocSequentialLanguageBuilder"
         name="GemocSequentialLanguage Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.gemoc.executionengine.java.sequential_language_workbench.ui.builder.GemocSequentialLanguageBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="GemocSequentialLanguageNature"
         name="GemocSequentialLanguage Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.gemoc.executionengine.java.sequential_language_workbench.ui.builder.GemocSequentialLanguageNature">
         </run>
      </runtime>
      <builder
            id="org.gemoc.executionengine.java.sequential_language_workbench.ui.GemocSequentialLanguageBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/IconeGemocLanguage-10.png"
            id="org.gemoc.executionengine.java.sequential_language_workbench.ui.GemocSequentialLanguageNature.image"
            natureId="org.gemoc.executionengine.java.sequential_language_workbench.ui.GemocSequentialLanguageNature">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.gemoc.executionengine.java.sequential_language_workbench.ui.GemocSequentialLanguageNature.category"
            name="GemocSequentialLanguage Project Nature commands">
      </category>
      <command
            categoryId="org.gemoc.executionengine.java.sequential_language_workbench.ui.GemocSequentialLanguageNature.category"
            defaultHandler="org.gemoc.executionengine.java.sequential_language_workbench.ui.builder.AddRemoveGemocSequentialLanguageNatureHandler"
            id="org.gemoc.executionengine.java.sequential_language_workbench.ui.addRemoveGemocSequentialLanguageNature"
            name="Add/RemoveGemocSequentialLanguage Project Nature">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="org.gemoc.executionengine.java.sequential_language_workbench.ui.addRemoveGemocSequentialLanguageNature"
               label="Disable Sequential xDSML builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              property="org.eclipse.core.resources.projectNature"
                              value="org.gemoc.executionengine.java.sequential_language_workbench.ui.GemocSequentialLanguageNature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.gemoc.executionengine.java.sequential_language_workbench.ui.addRemoveGemocSequentialLanguageNature"
               label="Enable Sequential xDSML builder"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="org.gemoc.executionengine.java.sequential_language_workbench.ui.GemocSequentialLanguageNature">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.gemoc.gemoc_language_workbench.ui"
            name="GEMOC">
      </category>
      <wizard
            category="org.gemoc.gemoc_language_workbench.ui"
            class="org.gemoc.executionengine.java.sequential_language_workbench.ui.wizards.CreateNewGemocSequentialLanguageProject"
            icon="icons/IconeGemocLanguage-16.png"
            finalPerspective="org.eclipse.sirius.ui.tools.perspective.design"
            id="org.gemoc.gemoc_language_workbench.ui.wizards.CreateNewGemocSequentialLanguageProject"
            name="GEMOC Sequential xDSML Project"
            project="true">
      </wizard>      
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.sirius.ui.tools.perspective.design">
         <newWizardShortcut
               id="org.gemoc.gemoc_language_workbench.ui.wizards.CreateNewGemocSequentialLanguageProject">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>


</plugin>
