<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.gemoc.gemoc_language_workbench.guideline.process.category"
            name="Process">
      </category>
      <view
            category="org.gemoc.gemoc_language_workbench.guideline.process.category"
            class="org.gemoc.gemoc_language_workbench.guideline.process.ui.view.ProcessView"
            icon="icons/full/obj16/GemocProcess.png"
            id="org.gemoc.gemoc_language_workbench.guideline.process.view"
            name="Gemoc Guidelines"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.gemoc.gemoc_language_workbench.guideline.process.view">
         <command
               commandId="org.gemoc.gemoc_language_workbench.guideline.process.command.selectProcess"
               icon="icons/full/obj16/Process.gif"
               label="Select xDSML language"
               style="push">
         </command>
         <command
               commandId="org.gemoc.gemoc_language_workbench.guideline.process.command.startNewProcess"
               icon="icons/full/obj16/NewGemocLanguage-16.png"
               label="Start new xDSML language"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.gemoc.gemoc_language_workbench.guideline.process.ui.handler.SelectProcessHandler"
            id="org.gemoc.gemoc_language_workbench.guideline.process.command.selectProcess"
            name="Select xDSML language">
      </command>
      <command
            defaultHandler="org.gemoc.gemoc_language_workbench.guideline.process.ui.handler.StartNewProcessHandler"
            id="org.gemoc.gemoc_language_workbench.guideline.process.command.startNewProcess"
            name="Start new xDSML language">
      </command>
   </extension>

</plugin>
