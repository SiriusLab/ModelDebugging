<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>

    <properties>
        <sample_root>${basedir}/../../sample</sample_root>
        <tfsm_sample_language_root>${basedir}/../../sample/TFSM_GEMOC/language_workbench</tfsm_sample_language_root>
        <sigpml_sample_language_root>${basedir}/../../sample/SigPML/language_workbench</sdf_sample_language_root>
    </properties>
    
	<parent>
		<relativePath>../org.gemoc.gemoc_language_workbench.root/pom.xml</relativePath>
		<groupId>org.gemoc.gemoc_language_workbench</groupId>
		<artifactId>org.gemoc.gemoc_language_workbench.root</artifactId>
		<version>0.1.0-SNAPSHOT</version>
	</parent>

	<artifactId>org.gemoc.gemoc_language_workbench.sample.deployer</artifactId>
	<packaging>eclipse-plugin</packaging>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.3</version>
				<executions>
					<execution>
						<phase>initialize</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<mkdir dir="${basedir}/zips" />
								
								<!-- TFSM  -->
								<zip destfile="${basedir}/zips/org.gemoc.sample.tfsm.design.zip">
									<fileset dir="${tfsm_sample_language_root}/org.gemoc.sample.tfsm.design/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sample.tfsm.eclmoc2as.zip">
									<fileset dir="${tfsm_sample_language_root}/org.gemoc.sample.tfsm.eclmoc2as/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sample.tfsm.k3dsa.zip">
									<fileset dir="${tfsm_sample_language_root}/org.gemoc.sample.tfsm.k3dsa/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sample.tfsm.moc.lib.zip">
									<fileset dir="${tfsm_sample_language_root}/org.gemoc.sample.tfsm.moc.lib/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sample.tfsm.model.zip">
									<fileset dir="${tfsm_sample_language_root}/org.gemoc.sample.tfsm.model/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sample.tfsm.model.edit.zip">
									<fileset dir="${tfsm_sample_language_root}/org.gemoc.sample.tfsm.model.edit/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sample.tfsm.model.editor.zip">
									<fileset dir="${tfsm_sample_language_root}/org.gemoc.sample.tfsm.model.editor/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sample.tfsm.xdsml.zip">
									<fileset dir="${tfsm_sample_language_root}/org.gemoc.sample.tfsm.xdsml/" />
								</zip>

								<!-- SigPML -->
								<zip destfile="${basedir}/zips/fr.cnrs.luchogie.ultimateplotter.zip">
									<fileset dir="${sigpml_sample_language_root}/fr.cnrs.luchogie.ultimateplotter/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sigpml.concrete.design.zip">
									<fileset dir="${sigpml_sample_language_root}/org.gemoc.sigpml.concrete.design/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sigpml.k3dsa.zip">
									<fileset dir="${sigpml_sample_language_root}/org.gemoc.sigpml.k3dsa/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sigpml.moc.application.zip">
									<fileset dir="${sigpml_sample_language_root}/org.gemoc.sigpml.moc.application/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sigpml.moc.lib.zip">
									<fileset dir="${sigpml_sample_language_root}/org.gemoc.sigpml.moc.lib/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sigpml.model.zip">
									<fileset dir="${sigpml_sample_language_root}/org.gemoc.sigpml.model/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sigpml.model.edit.zip">
									<fileset dir="${sigpml_sample_language_root}/org.gemoc.sigpml.model.edit/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sigpml.model.editor.zip">
									<fileset dir="${sigpml_sample_language_root}/org.gemoc.sigpml.model.editor/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sigpml.xdsml.zip">
									<fileset dir="${sigpml_sample_language_root}/org.gemoc.sigpml.xdsml/" />
								</zip>
								
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project> 

