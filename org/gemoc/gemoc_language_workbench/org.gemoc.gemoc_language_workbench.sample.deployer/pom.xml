<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<relativePath>../org.gemoc.gemoc_language_workbench.root/pom.xml</relativePath>
		<groupId>org.gemoc.gemoc_language_workbench</groupId>
		<artifactId>org.gemoc.gemoc_language_workbench.root</artifactId>
		<version>0.1.0-SNAPSHOT</version>
	</parent>

	<artifactId>org.gemoc.gemoc_language_workbench.sample.deployer</artifactId>
	<packaging>eclipse-plugin</packaging>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.3</version>
				<executions>
					<execution>
						<phase>initialize</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<mkdir dir="${basedir}/zips" />
								
								<zip destfile="${basedir}/zips/org.gemoc.sample.tfsm.zip">
									<fileset dir="${basedir}/../../sample/tfsm_k3/org.gemoc.sample.tfsm/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sample.tfsm.model.zip">
									<fileset dir="${basedir}/../../sample/tfsm_k3/org.gemoc.sample.tfsm.model/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sample.tfsm.model.edit.zip">
									<fileset dir="${basedir}/../../sample/tfsm_k3/org.gemoc.sample.tfsm.model.edit/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sample.tfsm.model.editor.zip">
									<fileset dir="${basedir}/../../sample/tfsm_k3/org.gemoc.sample.tfsm.model.editor/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sample.tfsm.k3dsa.zip">
									<fileset dir="${basedir}/../../sample/tfsm_k3/org.gemoc.sample.tfsm.k3dsa/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sample.tfsm.ecldse.zip">
									<fileset dir="${basedir}/../../sample/tfsm_k3/org.gemoc.sample.tfsm.ecldse/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sample.tfsm.ccslmoc.zip">
									<fileset dir="${basedir}/../../sample/tfsm_k3/org.gemoc.sample.tfsm.ccslmoc/" />
								</zip>
								<zip destfile="${basedir}/zips/org.gemoc.sample.tfsm.design.zip">
									<fileset dir="${basedir}/../../sample/tfsm_k3/org.gemoc.sample.tfsm.design/" />
								</zip>
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project> 

