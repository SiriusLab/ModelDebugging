<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            nameFilter="*"
            id="org.gemoc.gemoc_modeling_workbench.ui.addnature.contribution">
         <action
               class="org.gemoc.gemoc_modeling_workbench.ui.builder.ToggleNatureAction"
               enablesFor="+"
               icon="icons/IconeGemocModel-16.png"
               id="org.gemoc.gemoc_modeling_workbench.ui.addRemoveNatureAction"
               label="Add Executable Modeling Nature"
               menubarPath="org.eclipse.ui.projectConfigure/additions">
         </action>
         <visibility>
         <and>
            <not>
                <objectState name="projectNature" value="org.gemoc.gemoc_modeling_workbench.ui.gemocReflectiveModelNature"/>
            </not>
            <objectClass name="org.eclipse.core.resources.IProject" />
          </and>
         </visibility>
      </objectContribution>
      <objectContribution
            adaptable="true"
            objectClass="org.eclipse.core.resources.IProject"
            nameFilter="*"
            id="org.gemoc.gemoc_modeling_workbench.ui.removenature.contribution">
         <action
               class="org.gemoc.gemoc_modeling_workbench.ui.builder.ToggleNatureAction"
               enablesFor="+"
               icon="icons/IconeGemocModel-16.png"
               id="org.gemoc.gemoc_modeling_workbench.ui.addRemoveNatureAction"
               label="Remove Executable Modeling Nature (Reflective)"
               menubarPath="org.eclipse.ui.projectConfigure/additions">
         </action>
         
	    <visibility>
	       <and>
	          <objectClass
	                name="org.eclipse.core.resources.IProject">
	          </objectClass>
	          <objectState
	                name="projectNature"
	                value="org.gemoc.gemoc_modeling_workbench.ui.gemocReflectiveModelNature">
	          </objectState>
	       </and>
	    </visibility>
      </objectContribution>
   </extension>
   <!-- definitions of launch menu -->
   	<extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="org.gemoc.gemoc_modeling_workbench.ui.launcher.Launcher"
            id="org.gemoc.gemoc_modeling_workbench.ui.launcher"
            modes="run, debug"
            name="Gemoc eXecutable Model"
            public="true"
            sourceLocatorId="org.gemoc.gemoc_modeling_workbench.ui.sourceLocator">
      </launchConfigurationType>
   </extension>
    <extension
          point="org.eclipse.debug.ui.debugModelPresentations">
       <debugModelPresentation
             class="org.gemoc.gemoc_modeling_workbench.ui.launcher.GemocDebugModelPresentation"
             id="org.gemoc.gemoc_modeling_workbench.ui.debugModel">
       </debugModelPresentation>
    </extension>
   <extension point="org.eclipse.debug.ui.launchConfigurationTypeImages">
    <launchConfigurationTypeImage
        icon="icons/IconeGemocModel-16.png"
        configTypeID="org.gemoc.gemoc_modeling_workbench.ui.launcher"
        id="org.gemoc.gemoc_modeling_workbench.ui.launcher.image">
    </launchConfigurationTypeImage>
	</extension>
	   <extension point="org.eclipse.debug.ui.launchConfigurationTabGroups">
	    <launchConfigurationTabGroup
           class="org.gemoc.gemoc_modeling_workbench.ui.launcher.LauncherTabGroup"
           id="org.gemoc.gemoc_modeling_workbench.ui.launcher.tabGroup"
           type="org.gemoc.gemoc_modeling_workbench.ui.launcher">
	    </launchConfigurationTabGroup>
	</extension>
	<extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="org.gemoc.gemoc_modeling_workbench.ui.launcher.Launcher"
            icon="icons/IconeGemocModel-16.png"
            id="org.gemoc.gemoc_modeling_workbench.ui.GemocExecutableReflectiveModel"
            label="Gemoc eXecutable Model"
            modes="run, debug">
         <configurationType
               id="org.gemoc.gemoc_modeling_workbench.ui.GemocReflectiveModelLauncherID">
         </configurationType>
         <contextualLaunch>
            <enablement>
               <count
                     value="1">
               </count>
               <iterate
                     operator="or">
                  <or>
                     <test
                           property="org.eclipse.debug.ui.matchesPattern"
                           value="*.xmi">
                     </test>
                     <adapt type="org.eclipse.core.resources.IResource">
                     	<test
                           property="org.eclipse.core.resources.projectNature"
                           value="org.kermeta.language.texteditor.eclipse.nature.KermetaNatureID">
                     	</test>
                     </adapt>
                  </or>
               </iterate>
            </enablement>
            <contextLabel
                  label="Run as Gemoc eXecutable Reflective Model"
                  mode="run">
            </contextLabel>
            <contextLabel
                  label="Debug as Gemoc eXecutable Reflective Model"
                  mode="debug">
            </contextLabel>
         </contextualLaunch>
      </shortcut>
   </extension>
 <extension
       point="org.eclipse.ui.newWizards">
    <wizard
          category="org.gemoc.gemoc_language_workbench.ui"
          class="org.gemoc.gemoc_modeling_workbench.ui.wizards.CreateNewGemocModelingProject"
          icon="icons/IconeGemocModel-16.png"
          id="org.gemoc.gemoc_modeling_workbench.ui.wizards.CreateNewGemocModelingProject"
          name="New GEMOC Modeling Project"
          project="true">
    </wizard>
 </extension>
   <extension
         point="org.eclipse.sirius.externalJavaAction">
      <javaActions
            actionClass="org.gemoc.gemoc_modeling_workbench.ui.debug.sirius.action.GemocDebugAs"
            id="org.gemoc.gemoc_modeling_workbench.ui.debug.sirius.action.gemocDebugAs">
      </javaActions>
      <javaActions
            actionClass="org.gemoc.gemoc_modeling_workbench.ui.debug.sirius.action.GemocToggleBreakpoint"
            id="org.gemoc.gemoc_modeling_workbench.ui.debug.sirius.action.gemocToggleBreakpoint">
      </javaActions>
   </extension>
   <extension
         point="org.eclipse.debug.core.sourceLocators">
      <sourceLocator
            class="org.gemoc.gemoc_modeling_workbench.ui.launcher.GemocSourceLocator"
            id="org.gemoc.gemoc_modeling_workbench.ui.sourceLocator"
            name="Gemoc Source Locator">
      </sourceLocator>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <actionSet
               id="org.eclipse.debug.ui.launchActionSet">
         </actionSet>
      </perspectiveExtension>
   </extension>
   
      <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IFile"
            id="org.gemoc.modeling.menu.contribution">
         <menu
               icon="icons/IconeGemocModel-16.png"
               id="org.gemoc.modeling.menu"
               label="GEMOC"
               path="additions">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               label="Generate extended CCSL (use language specified QVTO)"
               class="org.gemoc.gemoc_modeling_workbench.ui.actions.GenerateExtendedCCSLFile"
               menubarPath="org.gemoc.modeling.menu/group1"
               id="org.gemoc.modeling.generate.extendedccsl">
         </action>
         <action
               class="org.gemoc.gemoc_modeling_workbench.ui.actions.ChooseQVTOAndGenerateExtendedCCSLFile"
               id="org.gemoc.modeling.generate.extendedccsl2"
               label="Generate extended CCSL (choose QVTO)"
               menubarPath="org.gemoc.modeling.menu/group1">
         </action>

         <action
               label="Generate time model (use language specified QVTO)"
               class="org.gemoc.gemoc_modeling_workbench.ui.actions.GenerateTimeModelFile"
               menubarPath="org.gemoc.modeling.menu/group1"
               id="org.gemoc.modeling.generate.extendedccsl">
         </action>
         <action
               class="org.gemoc.gemoc_modeling_workbench.ui.actions.ChooseQVTOAndGenerateTimeModelFile"
               id="org.gemoc.modeling.generate.extendedccsl2"
               label="Generate time model (choose QVTO)"
               menubarPath="org.gemoc.modeling.menu/group1">
         </action>

      </objectContribution>
   </extension>
      <extension
            point="org.eclipse.ui.commands">
         <command
               defaultHandler="org.gemoc.gemoc_modeling_workbench.ui.commands.AddDebugLayerHandler"
               id="org.gemoc.gemoc_modeling_workbench.ui.addDebugLayer"
               name="Add debug layer">
         </command>
         <command
               defaultHandler="org.gemoc.gemoc_modeling_workbench.ui.commands.ShowCallerHandler"
               id="org.gemoc.gemoc_modeling_workbench.ui.timeline.ShowCallerCommand"
               name="Show Caller">
         </command>
      </extension>
      <extension
            point="org.eclipse.ui.menus">
         <menuContribution
               allPopups="false"
               locationURI="popup:org.eclipse.sirius.editor.editorPlugin.SiriusEditorID">
            <menu
                  icon="icons/gemoc-logo-16.png"
                  id="gemoc"
                  label="Gemoc">
               <command
                     commandId="org.gemoc.gemoc_modeling_workbench.ui.addDebugLayer"
                     icon="icons/gemoc-logo-16.png"
                     label="Add debug layer"
                     style="push"
                     tooltip="Add a debug layer to the selected diagram description">
                  <visibleWhen
                        checkEnabled="false">
                     <with
                           variable="selection">
                        <count
                              value="1">
                        </count>
                        <iterate
                              ifEmpty="false"
                              operator="and">
                           <instanceof
                                 value="org.eclipse.sirius.diagram.description.DiagramDescription">
                           </instanceof>
                        </iterate>
                     </with>
                  </visibleWhen>
               </command>
            </menu>
         </menuContribution>
         <menuContribution
               allPopups="false"
               locationURI="popup:org.gemoc.execution.engine.io.views.timeline.TimeLineView">
            <command
                  commandId="org.gemoc.gemoc_modeling_workbench.ui.timeline.ShowCallerCommand"
                  icon="icons/showCaller.png"
                  label="Show Caller"
                  style="toggle">
               <visibleWhen
                     checkEnabled="true">
                  <with
                        variable="selection">
                     <and>
                        <count
                              value="1">
                        </count>
                        <iterate>
                           <instanceof
                                 value="fr.obeo.timeline.editpart.PossibleStepEditPart">
                           </instanceof>
                        </iterate>
                     </and>
                  </with>
               </visibleWhen>
            </command>
         </menuContribution>
      </extension>
   
</plugin>
