    <path id="fr.obeo.dsl.workflow.gen.libraryclasspath.alljars">
        <pathelement location="../fr.obeo.dsl.workflow.gen/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
