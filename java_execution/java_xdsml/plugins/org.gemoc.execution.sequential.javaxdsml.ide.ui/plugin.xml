<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         id="GemocSequentialLanguageBuilder"
         name="GemocSequentialLanguage Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.gemoc.execution.sequential.javaxdsml.ide.ui.builder.GemocSequentialLanguageBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="GemocSequentialLanguageNature"
         name="GemocSequentialLanguage Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.gemoc.execution.sequential.javaxdsml.ide.ui.builder.GemocSequentialLanguageNature">
         </run>
      </runtime>
      <builder
            id="org.gemoc.execution.sequential.javaxdsml.ide.ui.GemocSequentialLanguageBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/IconeGemocLanguage-10.png"
            id="org.gemoc.execution.sequential.javaxdsml.ide.ui.GemocSequentialLanguageNature.image"
            natureId="org.gemoc.execution.sequential.javaxdsml.ide.ui.GemocSequentialLanguageNature">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.gemoc.execution.sequential.javaxdsml.ide.ui.GemocSequentialLanguageNature.category"
            name="GemocSequentialLanguage Project Nature commands">
      </category>
      <command
            categoryId="org.gemoc.execution.sequential.javaxdsml.ide.ui.GemocSequentialLanguageNature.category"
            defaultHandler="org.gemoc.execution.sequential.javaxdsml.ide.ui.builder.AddRemoveGemocSequentialLanguageNatureHandler"
            id="org.gemoc.execution.sequential.javaxdsml.ide.ui.addRemoveGemocSequentialLanguageNature"
            name="Add/RemoveGemocSequentialLanguage Project Nature">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="org.gemoc.execution.sequential.javaxdsml.ide.ui.addRemoveGemocSequentialLanguageNature"
               icon="icons/IconeGemocLanguage-16.png"
               label="Remove Sequential xDSML Project Nature"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              property="org.eclipse.core.resources.projectNature"
                              value="org.gemoc.execution.sequential.javaxdsml.ide.ui.GemocSequentialLanguageNature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.gemoc.execution.sequential.javaxdsml.ide.ui.addRemoveGemocSequentialLanguageNature"
               icon="icons/IconeGemocLanguage-16.png"
               label="Add Sequential xDSML Project Nature"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="org.gemoc.execution.sequential.javaxdsml.ide.ui.GemocSequentialLanguageNature">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.gemoc.gemoc_language_workbench.ui"
            name="GEMOC">
      </category>
      <wizard
            category="org.gemoc.gemoc_language_workbench.ui"
            class="org.gemoc.execution.sequential.javaxdsml.ide.ui.wizards.CreateNewGemocSequentialLanguageProject"
            icon="icons/IconeGemocLanguage-16.png"
            finalPerspective="org.eclipse.sirius.ui.tools.perspective.design"
            id="org.gemoc.gemoc_language_workbench.ui.wizards.CreateNewGemocSequentialLanguageProject"
            name="GEMOC Sequential xDSML Project"
            project="true">
      </wizard>      
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.sirius.ui.tools.perspective.design">
         <newWizardShortcut
               id="org.gemoc.gemoc_language_workbench.ui.wizards.CreateNewGemocSequentialLanguageProject">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>

	<extension
         point="fr.inria.diverse.commons.eclipse.pde.projectContent">      
      <wizard
            class="org.gemoc.execution.sequential.javaxdsml.ide.ui.templates.SequentialNewWizard"
            id="fr.inria.diverse.melange.ui.templates.projectContent.Sequential"
            name="Simple GEMOC sequential project"
            targetPluginId="fr.inria.diverse.melange.ui">
         <description>
            This template includes the definition of a sequential language.
         </description>
      </wizard>
   </extension>
   
   <extension
         point="fr.inria.diverse.commons.eclipse.pde.templates">
      <template
            class="org.gemoc.execution.sequential.javaxdsml.ide.ui.templates.SequentialTemplate"
            contributingId="fr.inria.diverse.melange.ui.templates.template1"
            id="fr.inria.diverse.melange.ui.templates.template_simple_sequential_language"
            name="Simple sequential GEMOC project">
      </template>
   </extension>
</plugin>
