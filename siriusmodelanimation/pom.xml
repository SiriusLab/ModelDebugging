<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <prerequisites>
        <maven>3.0</maven>
    </prerequisites>

    <groupId>org.gemoc.siriusmodelanimation</groupId>
    <artifactId>org.gemoc.siriusmodelanimation.root</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>org.gemoc.siriusmodelanimation.root</name>
	<parent>
		<groupId>org.gemoc</groupId>
		<artifactId>org.gemoc.siriusanimation.root</artifactId>
    	<version>0.1.0-SNAPSHOT</version>
		<relativePath>..</relativePath>
	</parent>
    <licenses>
        <license>
            <name>TODO</name>
            <comments>
                TODO
            </comments>
        </license>
    </licenses>

    <properties>
        <tycho-version>0.18.1</tycho-version>
    </properties>

    <modules>
		<!-- plugins -->
        <module>plugins/fr.obeo.dsl.debug</module>
        <module>plugins/fr.obeo.dsl.debug.edit</module>
        <module>plugins/fr.obeo.dsl.debug.ide</module>
        <module>plugins/fr.obeo.dsl.debug.ide.sirius.ui</module>
        <module>plugins/fr.obeo.dsl.debug.ide.ui</module>

		<!-- tests -->
        <module>tests/fr.obeo.dsl.debug.tests</module>
        <module>tests/fr.obeo.dsl.debug.ide.tests</module>

        <!-- features and update sites -->
        <module>releng/fr.obeo.dsl.debug.feature</module>
        <module>releng/fr.obeo.dsl.debug.ui.feature</module>
        <module>releng/fr.obeo.dsl.debug.sirius.ui.feature</module>
        <module>releng/org.gemoc.modelanimation.repository</module>
        
        
    </modules>

  <build>
      <plugins>
          <plugin>
              <groupId>org.eclipse.tycho</groupId>
              <artifactId>target-platform-configuration</artifactId>
              <version>${tycho-version}</version>
              <configuration>
                  <resolver>p2</resolver>
                  <environments>
                      <environment>
                          <os>linux</os>
                          <ws>gtk</ws>
                          <arch>x86</arch>
                      </environment>
                      <environment>
                          <os>win32</os>
                          <ws>win32</ws>
                          <arch>x86</arch>
                      </environment>
                      <environment>
                          <os>win32</os>
                          <ws>win32</ws>
                          <arch>x86_64</arch>
                      </environment>
                      <environment>
                          <os>linux</os>
                          <ws>gtk</ws>
                          <arch>x86_64</arch>
                      </environment>
                      <environment>
                          <os>macosx</os>
                          <ws>cocoa</ws>
                          <arch>x86_64</arch>
                      </environment>
                  </environments>
              </configuration>            
          </plugin>
          <plugin>
              <!-- enable tycho build extension -->
              <groupId>org.eclipse.tycho</groupId>
              <artifactId>tycho-maven-plugin</artifactId>
              <version>${tycho-version}</version>
              <extensions>true</extensions>
          </plugin>
      </plugins>
  </build>

  <profiles>
      <profile>
          <!-- This profile should be enabled for sonar analysis-->
          <id>quality</id>
          <activation>
              <activeByDefault>false</activeByDefault>
          </activation>
          <properties>
              <!-- Sonar properties -->
              <sonar.core.codeCoveragePlugin>jacoco</sonar.core.codeCoveragePlugin>
              <sonar.dynamicAnalysis>reuseReports</sonar.dynamicAnalysis>
              <!-- Points to the target folder of the global parent project -->
              <sonar.jacoco.reportPath>../../target/jacoco.exec</sonar.jacoco.reportPath>
          </properties>
          <build>
              <plugins>
                  <plugin>
                      <groupId>org.jacoco</groupId>
                      <artifactId>jacoco-maven-plugin</artifactId>
                      <version>0.5.6.201201232323</version>
                      <executions>
                          <execution>
                              <goals>
                                  <goal>prepare-agent</goal>
                              </goals>
                              <configuration>
                                  <append>true</append>
                                  <destFile>${sonar.jacoco.reportPath}</destFile>
                              </configuration>
                          </execution>
                      </executions>
                  </plugin>
              </plugins>
          </build>
      </profile>
    	<!-- Profiles used for switching the repositories used for the build so they either use the CI update sites or local repositories -->
	    <profile>
	        <id>use_CI_repositories</id>
	        <activation>
	            <activeByDefault>true</activeByDefault>
	        </activation>
	        <repositories>
<!-- 		        <repository> -->
<!-- 		            <id>Gemoc Target Platform all-except-animation</id> -->
<!-- 		            <layout>p2</layout> -->
<!-- 		            <url>https://ci.inria.fr/gemoc/job/org.gemoc.targetplatform.redirects/lastSuccessfulBuild/artifact/org/gemoc/targetplatform/update/all-except-animation</url> -->
<!-- 		        </repository> -->
				<repository>
		            <id>gemoc-studio_commons on CI</id>
		            <layout>p2</layout>
		            <url>https://ci.inria.fr/gemoc/job/gemoc-studio_commons/lastSuccessfulBuild/artifact/commons/releng/org.gemoc.commons.repository/target/repository/</url>
		        </repository>	
		    </repositories>
	    </profile>
    	<profile>
	    	<!-- use this command line to activate this profile -->
	    	<!-- mvn clean install -Dignore_CI_repositories -->
	    	<!-- or directly with the ID using the eclipse UI -->
	    	<id>ignore_CI_repositories</id>
	    	<activation>
		      <property>
		        <name>ignore_CI_repositories</name>
		      </property>
		    </activation>    		
    	</profile>
    	
    </profiles>
</project>
