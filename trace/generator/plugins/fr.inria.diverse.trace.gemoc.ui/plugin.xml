   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerActionBinding
            viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <actionExtension
                  pattern="fr.inria.diverse.trace.gemoc.ui.contextmenu.GenerateAction">
            </actionExtension>
         </includes>
      </viewerActionBinding>
      <viewerActionBinding
            viewerId="org.eclipse.sirius.ui.tools.views.model.explorer">
         <includes>
            <actionExtension
                  pattern="fr.inria.diverse.trace.gemoc.ui.contextmenu.GenerateAction">
            </actionExtension>
         </includes>
      </viewerActionBinding>
   </extension>
   
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <actionProvider
            class="fr.inria.diverse.trace.gemoc.ui.contextmenu.GenerateActionProvider"
            id="fr.inria.diverse.trace.gemoc.ui.contextmenu.GenerateAction">
         <enablement>
            <and>
               <instanceof
                     value="org.eclipse.core.resources.IFile">
               </instanceof>
               <test
                     property="org.eclipse.core.resources.extension"
                     value="melange">
               </test>
            </and>
         </enablement>
      </actionProvider>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="fr.inria.diverse.trace.gemoc.ui.category"
            name="Gemoc Trace commands">
      </category>
      <command
            categoryId="fr.inria.diverse.trace.gemoc.ui.category"
            defaultHandler="fr.inria.diverse.trace.gemoc.ui.contextmenu.XDSMLProject2TraceAddonHandler"
            id="org.gemoc.execution.sequential.javaxdsml.ide.ui.commands.GenerateTraceAddonPlugin"
            name="GenerateTraceAddonPlugin">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <menu
               icon="icons/IconeGemocLanguage-16.png"
               id="GemocLanguage.menu"
               label="GEMOC Language">
            <command
                  commandId="org.gemoc.execution.sequential.javaxdsml.ide.ui.commands.GenerateTraceAddonPlugin"
                  icon="icons/plus-16.png"
                  label="Create Trace Addon project for language"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <count
                           value="1">
                     </count>
                     <iterate
                           ifEmpty="false">
                        <reference
                              definitionId="org.gemoc.execution.sequential.javaxdsml.ide.ui.definitions.IsSelectionInGemocSequentialLanguageProject">
                        </reference>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.gemoc.execution.sequential.javaxdsml.ide.ui.definitions.IsSelectionInGemocSequentialLanguageProject">
         <adapt
               type="org.eclipse.core.resources.IResource">
            <test
                  property="org.eclipse.core.resources.projectNature "
                  value="org.gemoc.execution.sequential.javaxdsml.ide.ui.GemocSequentialLanguageNature">
            </test>
         </adapt>
      </definition>
   </extension>

</plugin>
