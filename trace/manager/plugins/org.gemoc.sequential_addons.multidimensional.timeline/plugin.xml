<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.gemoc.sequential_addons.multidimensional.timeline.category"
            name="Gemoc">
      </category>
      <view
            category="org.gemoc.sequential_addons.multidimensional.timeline.category"
            class="org.gemoc.sequential_addons.multidimensional.timeline.views.timeline.MultidimensionalTimeLineView"
            icon="icons/IconeGemocModel-16.png"
            id="org.gemoc.sequential_addons.multidimensional.timeline.views.timeline.MultidimensionalTimeLineView"
            name="Multidimensional Timeline">
      </view>
	</extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.gemoc.sequential_addons.multidimensional.timeline.views.timeline.MultidimensionalTimeLineView">
         <command
               commandId="org.gemoc.sequential_addons.multidimensional.timeline.views.timeline.BackValue"
               icon="icons/backvalue.png"
               label="Back Value"
               style="push"
               tooltip="Jumps to the previous state in the trace where the selected dimension has been modified">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.gemoc.sequential_addons.multidimensional.timeline.views.timeline.MultidimensionalTimeLineView">
         <command
               commandId="org.gemoc.sequential_addons.multidimensional.timeline.views.timeline.StepValue"
               icon="icons/stepvalue.png"
               label="Step Value"
               style="push"
               tooltip="Jumps to the next state in the trace where the selected dimension has been modified">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.gemoc.sequential_addons.multidimensional.timeline.views.timeline.handler.StepValueHandler"
            id="org.gemoc.sequential_addons.multidimensional.timeline.views.timeline.StepValue"
            name="Step Value">
      </command>
      <command
            defaultHandler="org.gemoc.sequential_addons.multidimensional.timeline.views.timeline.handler.BackValueHandler"
            id="org.gemoc.sequential_addons.multidimensional.timeline.views.timeline.BackValue"
            name="Back Value">
      </command>
   </extension>
   <extension
         point="org.gemoc.gemoc_language_workbench.engine_addon_group">
         <AddonGroup
            Name="Sequential"
            id="Sequential.AddonGroup">
      </AddonGroup>
   </extension>
	<extension
         point="org.gemoc.gemoc_language_workbench.engine_addon">
      <Addon
            AddonGroupId="Sequential.AddonGroup"
            Class="org.gemoc.sequential_addons.multidimensional.timeline.views.timeline.MultidimentionalTimeLineOpenViewAddon"
            Default="false"
            Name="Open Multidimentional Timeline view"
            ShortDescription="Open the Multidimentional Timeline view. (requires a trace addon dedicated to this language)"
            id="EventSchedulingTimelineView">
      </Addon>
   </extension>

</plugin>
